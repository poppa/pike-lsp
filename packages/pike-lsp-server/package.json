{
  "name": "@pike-lsp/pike-lsp-server",
  "version": "0.1.0-alpha.19",
  "description": "Pike Language Server Protocol implementation",
  "type": "module",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "bin": {
    "pike-lsp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "build:roxen-data": "bun run scripts/build-roxen-data.ts",
    "prebuild": "bun run build:roxen-data",
    "clean": "rm -rf dist",
