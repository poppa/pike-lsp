    "test:smoke": "bun test src/tests/",
    "typecheck": "tsc --noEmit",
    "benchmark": "bun benchmarks/runner.ts"
  },
  "dependencies": {
    "@pike-lsp/core": "workspace:^",
    "@pike-lsp/pike-bridge": "workspace:^",
    "htmlparser2": "^10.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "glob": "^13.0.1",
    "mitata": "^1.0.34",
    "typescript": "^5.3.0"
  }
}
