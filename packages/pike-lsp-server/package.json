{
  "name": "@pike-lsp/pike-lsp-server",
  "version": "0.1.0-alpha.10",
  "description": "Pike Language Server Protocol implementation",
  "type": "module",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "bin": {
    "pike-lsp-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "test": "tsc && cd ../.. && bun test ./node_modules/@pike-lsp/pike-lsp-server/dist/src/",
    "test:smoke": "tsc && cd ../.. && bun test ./node_modules/@pike-lsp/pike-lsp-server/dist/src/tests/",
    "typecheck": "tsc --noEmit",
    "benchmark": "bun benchmarks/runner.ts"
  },
  "dependencies": {
    "@pike-lsp/core": "workspace:^",
    "@pike-lsp/pike-bridge": "workspace:^",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "mitata": "^1.0.34",
    "typescript": "^5.3.0"
  }
}
