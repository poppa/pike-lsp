{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": false,
        "composite": true,
        "paths": {
            "@pike-lsp/core": ["../core/src"],
            "@pike-lsp/pike-bridge": ["../pike-bridge/src"],
            "@pike-lsp/pike-bridge/dist/*": ["../pike-bridge/dist/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../pike-bridge"
        }
    ]
}