{
    "name": "vscode-pike",
    "displayName": "Pike Language Support",
    "description": "Complete language support for Pike including IntelliSense, go-to-definition, find references, diagnostics, hover, signature help, code completion, semantic tokens, call hierarchy, and workspace symbols.",
    "version": "1.0.0",
    "publisher": "pike-lsp",
    "license": "MIT",
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#1e3a5f",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pike-lsp/pike-lsp"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "keywords": [
        "pike",
        "pike programming language",
        "lsp",
        "intellisense",
        "autocomplete",
        "syntax highlighting",
        "code navigation",
        "diagnostics"
    ],
    "activationEvents": [
        "onLanguage:pike"
    ],
    "main": "./dist/extension.js",
    "extensionKind": [
        "workspace"
    ],
    "contributes": {
        "languages": [
            {
                "id": "pike",
                "aliases": [
                    "Pike",
                    "pike"
                ],
                "extensions": [
                    ".pike",
                    ".pmod"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pike",
                "scopeName": "source.pike",
                "path": "./syntaxes/pike.tmLanguage.json"
            }
        ],
                "commands": [
                        {
                                "command": "pike-module-path.add",
                                "title": "Add to Pike Module Path"
                        }
                ],
                "menus": {
                        "explorer/context": [
                                {
                                        "when": "explorerResourceIsFolder",
                                        "command": "pike-module-path.add"
                                }
                        ]
                },
        "configuration": {
            "type": "object",
            "title": "Pike",
            "properties": {
                "pike.pikePath": {
                    "type": "string",
                    "default": "pike",
                    "description": "Path to the Pike executable"
                },
		"pike.pikeModulePath": {
                    "type": "array",
                     "items": {
                       "type": "string"
                     },
                    "default": [],
                    "description": "Module Path"
                },
                "pike.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the Pike language server"
                }
            }
        }
    },
    "scripts": {
        "build": "esbuild src/extension.ts --bundle --platform=node --target=node18 --format=cjs --external:vscode --outfile=dist/extension.js",
        "clean": "rm -rf dist server",
        "watch": "tsc --watch",
        "bundle-server": "bash scripts/bundle-server.sh",
        "package": "pnpm build && pnpm bundle-server && vsce package --no-dependencies",
        "typecheck": "tsc --noEmit",
        "vscode:prepublish": "pnpm build && pnpm bundle-server"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.20.0",
        "typescript": "^5.3.0"
    }
}
